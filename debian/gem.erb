# vim: ft=ruby

require 'rubygems'
require 'rubygems/gem_runner'
require 'rubygems/exceptions'

def Gem.ruby
  "<%= package.prefix %>/bin/ruby"
end

def Gem.bindir(*args)
  "#{Dir.pwd}/debian/tmp<%= package.prefix %>/bin"
end

args = ARGV.clone

begin
  Gem::GemRunner.new.run args
rescue Gem::SystemExitException => e
  exit e.exit_code
end
