#!/bin/sh
# vim: ft=sh sw=8 noexpandtab

set -e

<%=
  MASTER_BINARY = 'ruby'
  IMPORTANT_BINARIES = %w(jruby irb gem ri rdoc erb rake rails)
  SHIMS = %w(shopify-ruby bundle)

  "update-alternatives --install \n" +
    "  /usr/bin/#{MASTER_BINARY} #{MASTER_BINARY} #{package.prefix}/bin/#{MASTER_BINARY} #{package.priority} \\\n" +
    IMPORTANT_BINARIES.map do |b|
      "  --slave /usr/bin/#{b} #{b} #{package.prefix}/bin/#{b} \\\n"
    end.join("") +
    SHIMS.map do |shim|
      "  --slave /usr/bin/#{shim} #{shim} #{package.prefix}/shims/#{shim} \\\n"
    end.join("")
%>
